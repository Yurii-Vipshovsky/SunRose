@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3 class="display-4">Write You Message</h3>
    <textarea id="messageText"></textarea>
    <div id="success-message" class="success-message"></div>
    <div id="fail-message" class="fail-message"></div>
    <button id="sendMessageButton">Send</button>

    <div class="text-center">
        <h1 id="all-messages" class="clickable">All users messages</h1>
        <div id="all-messages-sort" class="hidden">
            <p id="sort-by-id" class="clickable">Sort by ID</p>
            <p id="sort-order" class="clickable">Ascending</p>
            <p id="sort-by-time" class="clickable">Sort by Time</p>
        </div>
        <h1 id="my-messages" class="clickable selected">My messages</h1>
        <table id="messages-table" cellpadding="0" cellspacing="0" class="table"></table>
    </div>
</div>
